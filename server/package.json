  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/infra/main",
    "start:docker": "node dist/infra/main",
    "prestart:docker": "prisma migrate deploy",
    "lint": "biome lint --write ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.mts",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.mts",
    "docker": "docker compose --profile prod up -d",
    "docker:build": "docker compose --profile prod up -d --force-recreate --build",
    "docker:down": "docker compose --profile prod down",
    "docker:dev": "docker compose --profile dev up -d",
    "docker:dev:build": "docker compose --profile dev up -d --force-recreate --build",
    "docker:dev:down": "docker compose --profile dev down"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
