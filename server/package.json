    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.10.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.12.5",
    "bcryptjs": "^3.0.2",
    "ioredis": "^5.6.1",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
